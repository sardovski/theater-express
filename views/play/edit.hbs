<main> 

    {{!-- todo :id link method --}}
    <form class="theater-form" action="/play/edit/{{playData._id}}" method="POST">
        <h1>Edit Theater</h1>
        <div>
            <label for="title">Theater Title:</label>
            <input type="text" name="title" placeholder="Theater name" value="{{playData.title}}">
        </div>
        <div>
            <label for="description">Theater Description:</label>
            <textarea name="description" placeholder="Description">{{playData.description}}</textarea>
        </div>
        <div>
            <label for="imageUrl">Image url:</label>
            <input type="text" name="imageUrl" placeholder="Image Url" value="{{playData.imageUrl}}">
        </div>
        <div class="check">
            <input name="public" type="checkbox" id="check-box" checked>
            <label for="check-box">Public</label>
        </div>
        <button class="btn" type="submit">Submit</button>
    </form>
</main>